{
	"name": "CUDA + Python + Node.js with MySQL (Custom Dockerfile)",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces",
	"customizations": {
		"vscode": {
			"extensions": [
				"rvest.vs-code-prettier-eslint",
				"dbaeumer.vscode-eslint",
				"donjayamanne.python-extension-pack",
				"mechatroner.rainbow-csv",
				"ms-vscode.cpptools-extension-pack",
				"formulahendry.code-runner",
				"ms-azuretools.vscode-docker",
				"visualstudioexptteam.vscodeintellicode",
				"cweijan.vscode-mysql-client2"
			],
			"settings": {
				"editor.formatOnSave": true,
				"python.defaultInterpreterPath": "/opt/venv/bin/python",
				"python.linting.enabled": true,
				"python.linting.pylintEnabled": true,
				"terminal.integrated.defaultProfile.linux": "bash"
			}
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
	},
	"remoteUser": "vscode",
	"remoteEnv": {
		"PYTHONPATH": "${containerWorkspaceFolder}"
	},
	"postCreateCommand": "echo 'CUDA development environment with MySQL ready' && nvidia-smi && python --version && node --version && pip install mysql-connector-python SQLAlchemy"
}